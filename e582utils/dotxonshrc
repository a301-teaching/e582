# adjust some paths
$SHELL_TYPE = 'readline'
#$PATH.append('/home/scopatz/sandbox/bin')
#$LD_LIBRARY_PATH = ['/home/scopatz/.local/lib', '/home/scopatz/miniconda3/lib', '']

# alias to quit AwesomeWM from the terminal
def _quit_awesome(args, stdin=None):
    lines = $(ps ux | grep "gnome-session --session=awesome").splitlines()
    pids = [l.split()[1] for l in lines]
    for pid in pids:
        kill @(pid)

aliases['qa'] = _quit_awesome

# some customization options
$MULTILINE_PROMPT = '`·.,¸,.·*¯`·.,¸,.·*¯'
$XONSH_SHOW_TRACEBACK = True
$XONSH_STORE_STDOUT = True

# The default prompt is messed up in shells running within emacs.
# So set $TITLE to None as a work around.  Rely on the value of TERM
# to detect shells within emacs.
if $TERM in ["dumb", "eterm-color"]:
     $TITLE = None
echo "ran .xonsh"
$PROMPT='{user}@rail {NO_COLOR}{cwd}{NO_COLOR}: \n$ '
$TITLE=None
